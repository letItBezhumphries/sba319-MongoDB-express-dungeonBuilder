head
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  title D&D Dungeon Builder
  //- link(rel="stylesheet" type="text/css" href="/styles/index.css")
  style.
      * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

      ul {
        list-style: none;
      }



      :root {
        --page-content-width: 92%;
        --jet: rgba(51, 51, 51, 1);
        --davys-gray: rgba(78, 78, 78, 1);
        --battleship-gray: rgba(156, 156, 156, 1);
        --silver: rgba(167, 167, 167, 1);
        --battleship-gray-2: rgba(134, 134, 134, 1);
      }

      body {
        font-family: Arial, sans-serif;
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
      }

      nav {
        width: 100%;
        height: 18%;
        color: var(--davys-gray);
        margin: 0 auto;
        margin-left: 20px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }

      nav ul {
        list-style-type: none;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 40px;
        margin-right: 40px;
        flex: 1fr;
        max-width: 60%;
      }

      .nav-header {
        font-size: 20px;
        height: 100%;
        display: flex;
        align-items: center;
      }

      .nav-link a {
        text-decoration: none;
        color: var(--davys-gray);
      }

      .nav-link a:hover {
        color: lightpink;
      }

      #app {
        display: flex;
        justify-content: space-evenly;
        height: 90%;
      }

      .user-form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 30px;
        width: 100%;
        height: 60%;
      }

      .user-form input {
        margin-bottom: 30px;
      }

      .monster-list-container {
        width: 30%;
        margin-top: 30px;
        margin-left: 20px;
        color: var(--jet);
        border-radius: 4px;

      }

      .monsters-list {
        width: 100%;
        margin-top: 30px;
      }

      .monsters-list tr {
        height: 40px;
      }

      .monster-btn {
        width: 100%;
        height: 40px;
        background-color: orangered;
      }

      .monster-btn:hover {
        background-color: red;
        color: lightgray;
      }

      .page-controls-row {
        display: flex;
        justify-content: space-between;
      }

      .page-controls-row button {
      }

      .monster-view {
        margin-top: 20px;
        width: 60%;
        display: flex;
        flex-direction: column;
      }

      .monster-image {
        background-repeat: no-repeat;
        background-size: contain;
        width: 400px;
        height: 400px;
        margin-bottom: 30px;
        border: 2px solid red;
        align-self: center;
      }

      .monster-info {
        width: 100%;
        color: var(--jet);
        font-size: 12px;
        font-style: italic;
        border-bottom: 1px solid black;
        margin-bottom: 20px;
      }

      .monster-info .monster-description {
        margin: 10px 0 20px 0;

        font-style: normal;
      }


      .monster-info h3 {
        font-size: 30px;
        font-weight: 800;
        padding-top: 10px;
        margin-bottom: 10px;
      }

      .trow {
        display: flex;
        font-size: 13px;
        margin-bottom: 5px;
      }

      .trow td:first-of-type {
        color: var(--jet);
        font-size: 13px;
        font-weight: 700;
        width: 20%;
      }

      .trow td:last-of-type {
      }

      .page-controls-row button {
        border: none;
        color: dodgerblue;
        font-size: 13px;
        background-color: white;
      }

      .prev-btn:hover,
      .next-btn:hover {
        color: rgb(76, 160, 244);
        background-color: white;
        cursor: pointer;
      }

      .monster-attributes {
        margin-top: 20px;
        margin-bottom: 20px;
      }

      .monster-attributes tr:first-of-type td {
        color: var(--jet);
        font-size: 13px;
        font-weight: 700;
        border-bottom: 0.8px solid var(--jet);
        border-right: 0.8px solid var(--jet);
        text-align: center;
        margin-bottom: 18px;
      }

      .monster-attributes tr:last-of-type td {

        border-right: 0.8px solid var(--jet);
        text-align: center;
      }

      .proficiencies-section {
        margin-top: 10px;
        border-top: 1px solid #000000;
        padding-top: 20px;
        border-bottom: 1px solid black;
        padding-bottom: 20px;
      }

      .monster-proficiencies {
        width: 100%;
      }


      .monster-specials {
        width: 100%;
        margin-top: 20px;
        margin-bottom: 20px;
        padding: 0 10px;
        word-wrap: break-word;
      }

      .special-ability {
        font-size: 14px;
      }

      .special-ability span {
        font-weight: 900;
        font-size: 14px;
        font-style: italic;
        color: var(--jet);
      }

      .monster-actions {
        width: 100%;
        margin-bottom: 20px;
      }

      .section-header {
        font-size: 18px;
        font-weight: 300;
        color: var(--jet);
        border-bottom: 1px solid var(--jet);
        margin-bottom: 10px;
      }

      .legendary-description {
        font-size: 13px;
        padding: 0px 5px 10px 5px;
        font-weight: 300;
        color: var(--jet);
      }

      .monster-action {
        padding: 0 10px;
        margin-bottom: 5px;
        font-size: 13px;
      }

      .monster-action span {
        font-weight: 900;
        font-size: 14px;
        font-style: italic;
        color: var(--jet);
      }


      .container {
        background-color: white;
        width: 40%;
        height: 85vh;
      }

      .characters-list-container {
      }

      .character-view {
        background-color: beige;
        width: 80%;
        height: 85vh;
        display: flex;
        flex-direction: column;
      }

      .character-vitals {
        height: 100px;
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
      }

      .left {
        width: 30%;
        height: 100%;
      }

      .left input {
        width: 100%;
        height: 80%;
      }

      .right {
        width: 70%;
        height: 100%;
      }

      .right table {
        display: flex;
        height: 100%;
        width: 100%;
        justify-content: space-evenly;
        align-items: center;
        background-color: aqua;
        padding: 0 0;
        margin: 0 0;
      }

      .right tbody {
        width: 100%;
        height: 100%;
      }

      .right tr {
        width: 100%;
        height: 25%;
        background-color: aliceblue;
        display: flex;
        justify-content: space-evenly;
      }

      td select {
        border: none;
      }

      .character-main {
        background-color: burlywood;
      }

      .current-room-view {
        background-color: var(--davys-gray);
        width: 70%;
        height: 40%;
      }

      .current-room-view tbody {
        background-color: var(--davys-gray);
      }

      .dungeon-row {
        border: 0.8px solid var(--jet);
      }

      .dungeon-square {
        border: 0.8px solid dodgerblue;
        background-color: antiquewhite;
      }
